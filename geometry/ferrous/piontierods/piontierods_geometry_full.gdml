<gdml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://service-spi.web.cern.ch/service-spi/app/releases/GDML/schema/gdml.xsd">

  <define>
    <position name="piontierod_center_xrod1" unit="mm" y="-1511.0" x="1470.0"  z="24650" />
    <position name="piontierod_center_yrod1" unit="mm" y="2092.4"  x="-1265.6"  z="24650" />
    <position name="piontierod_center_yrod2" unit="mm" y="2093.1"  x="1224.1" z="24650" />
    <position name="piontierod_center_zrod1" unit="mm" y="766.7"   x="1418.0" z="24650" />
    <position name="piontierod_center_zrod2" unit="mm" y="-724.7"  x="1404.0" z="24650" />
    <position name="piontierod_center_zrod3" unit="mm" y="-1214.8" x="-1041.2"  z="24650" />
